<div class="user-profile">
	<img {{bind-attr src="avatarUrl"}} alt="avatar" />
	<h2>{{name}}</h2>
	<p>{{email}}</p>
	<p>{{bio}}</p>
	<span Created {{creationDate}}</span>
	<button {{action "edit"}}>Edit</button>
	<button {{action "delete"}}>Delete</button>
</div>
{{outlet}}

{{#if deleteMode}}
<div class="confirm-box">
	<h4>Really?</h4>
	<button {{action "confirmDelete"}}>Yes, Delete</button>
	<button {{action "cancelDelete"}}>No, Don't Delete</button>
</div>
{{/if}}
